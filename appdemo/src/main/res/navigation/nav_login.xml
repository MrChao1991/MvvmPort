<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:id="@+id/nav_login"
    app:startDestination="@id/loginMainFragment">

    <fragment
        android:id="@+id/loginMainFragment"
        android:name="com.cfox.appdemo.ui.login.login.LoginMainFragment"
        android:label="LoginMainFragment" >
        <action
            android:id="@+id/action_loginMainFragment_to_registerUserFragment"
            app:destination="@id/registerUserFragment" />
        <action
            android:id="@+id/action_loginMainFragment_to_forgetPasswordFragment"
            app:destination="@id/forgetPasswordFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerUserFragment"
        android:name="com.cfox.appdemo.ui.login.register.RegisterUserFragment"
        android:label="RegisterUserFragment" />
    <fragment
        android:id="@+id/forgetPasswordFragment"
        android:name="com.cfox.appdemo.ui.login.forget.ForgetPasswordFragment"
        android:label="ForgetPasswordFragment" />
</navigation>